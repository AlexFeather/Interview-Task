<Window x:Class="VM.OneLineEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VM"
        mc:Ignorable="d"
        Title="Edit" Height="100" Width="400" ResizeMode="NoResize">
    
    <Grid Margin="5,5,5,5">
        <Grid/>
        <TextBlock Name="EnterName" HorizontalAlignment="Left" Margin="30,0,0,0" Text="Enter Name" TextWrapping="Wrap" VerticalAlignment="Center"/>
        <TextBox x:Name="EnteredText" HorizontalAlignment="Left" Margin="100,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="200"/>
        <Button Content="Ok" HorizontalAlignment="Right" Margin="0,0,20,0" VerticalAlignment="Center" Width="50" Click="Ok_OnClick" IsDefault="True"/>
    </Grid>
</Window>
